@page
@model Assignment01.Pages.Films.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Film.FilmID" />
            <div class="form-group">
                <label asp-for="Film.GenreID" class="control-label"></label>
                <select asp-for="Film.GenreID" class="form-control" asp-items="ViewBag.GenreList"></select>
                <span asp-validation-for="Film.GenreID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Title" class="control-label"></label>
                <input asp-for="Film.Title" class="form-control" />
                <span asp-validation-for="Film.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Year" class="control-label"></label>
                <input asp-for="Film.Year" class="form-control" />
                <span asp-validation-for="Film.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.CountryCode" class="control-label"></label>
                <select asp-for="Film.CountryCode" class="form-control" asp-items="ViewBag.CountryList"></select>
                <span asp-validation-for="Film.CountryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.FilmUrl" class="control-label"></label>
                <input asp-for="Film.FilmUrl" class="form-control" />
                <span asp-validation-for="Film.FilmUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

