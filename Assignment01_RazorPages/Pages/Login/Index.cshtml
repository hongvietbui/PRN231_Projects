@page
@model Assignment01.Pages.Login.LoginModel


<div>
    <form asp-action="Login" method="post">
            <div>
                <h1>Login form</h1>
            </div>
        <div>
            <label for="username">Username:</label>
            <input asp-for="LoginRequest.Username" type="text" id="username" name="username">
        </div>
        <div class="" style="margin-top: 16px">
            <label for="password">Password:</label>
            <input asp-for="LoginRequest.Password" type="password" id="password" name="password">
        </div>
        <div style="margin-top: 16px">
            <input type="submit" class="btn btn-primary" value="Login"/>
        </div>
    </form>
    <div>
        <p>@(ViewData.Model.ErrorMessage!=""?ViewData.Model.ErrorMessage:"")</p>
    </div>
</div>
